{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(./scripts/:*)",
      "Bash(git:*)",
      "Bash(gh:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "^(wr|works ready)$",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/works-ready-hook.sh",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
