{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(./scripts/:*)",
      "Bash(git:*)",
      "Bash(gh:*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "works ready",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'TRIGGER: User said works ready. Execute /works-ready NOW. No preamble, no explanation.'",
            "timeout": 2
          }
        ]
      }
    ]
  }
}
